<% if user_signed_in? %>

  <h1>Friend list</h1>
  <center><h3>User: <%= current_user.id %></h3></center>

  <table class="table table-striped table-bordered table-hover" id="friends">
    <thead class="table-dark">
      <tr>
        <td>Name</td>
        <td>email</td>
        <td>phone</td>
        <td>twitter</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if current_user == friend.user %>  
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twiter %></td>
            <td><%= button_to "Delete", friend, method: :delete, class:"btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
  <h1>Hello world!</h1>
  <p>this is my first webpage</p>
<% end %>