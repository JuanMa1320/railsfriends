

<h1>Friend list</h1>

<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <td>First name</td>
      <td>last name</td>
      <td>email</td>
      <td>phone</td>
      <td>twitter</td>
      <td colspan="3" ></td>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.last_name %></td>
        <td><%= friend.first_name%></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twiter %></td>
        <td><%= link_to "Show", friend %></td>
        <td><%= link_to "Edit", friend %></td>
        <td><%= link_to "Destroy", friend, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
