<p style="color: green"><%= notice %></p>

<div class="card" style="width: 28rem;">
  <div class="card-body">
    <h5 class="card-title">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
    </h5>
    <p class="card-text">
    <%= @friend.email %> <br/>
    <%= @friend.phone %> <br/>
    <%= @friend.twiter %>
    </p>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
  </div>
</div>


<div>
  <br/><%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger" %>
</div>
